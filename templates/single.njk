{% macro render( element ) -%}
    <div class="sg-section" id="{{ element.name }}">
        <h2 class="sg-h2 sg-title">{{ element.name }}
        <a class="sg-btn sg-btn--single" href="{{element.path}}">
            <i class="fa fa-arrows-alt" aria-hidden="true"></i>
            single view</a></h2>
        <div class="sg-sub-section sg-doc">
            <div class="markdown-body">
                {{element.doc | safe}}
            </div>
        </div>

        {{ element.content | safe }}
        <div class="sg-code">
            <div class="sg-sub-section">
                <div class="sg-markup-controls">
                    <button type="button" class="sg-btn sg-btn--source">
                        <i class="fa fa-code" aria-hidden="true"></i>
                        View Source
                    </button>
                    <a class="sg-btn sg-btn--top" href="#top">
                        <i class="fa fa-angle-double-up" aria-hidden="true"></i>
                        Back to Top
                    </a>
                </div>
                <div class="sg-source">
                    <pre class="line-numbers">
                      <code class="language-markup">

{{ element.content | trim }}

                      </code>
                      </pre>
                </div>
            </div>
        </div>
    </div>
{%- endmacro %}
