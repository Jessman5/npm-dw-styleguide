{% macro linklist(tree, level = 0, webPath = webPath) %}
    <ul class="sg-linklist">
        {% for item in tree %}
            {% if level >= levelStart %}
                <li class="sg-linklist-item sg-linklist-{{ level }}">
            {% endif %}
            {{ linklistItem(item, level) }}
            {% if level >= levelStart %}
                </li>

            {% endif %}


        {% endfor %}
    </ul>
{% endmacro %}

{% macro linklistItem(item, level) %}
    {% if item.children %}
        {% if level >= levelStart %}
                <a class="sg-linklist-link sg-linklist-folder{% if item.hasOneSameNamedChildOnly %} sg-linklist-link-one-child-with-same-name {% endif %}" href="{{ webPath }}{{ item.pathSum }}/index.html">
                    {{ item.name }}
                </a>
        {% endif %}
        {{ linklist(item.children, level + 1) }}
    {% else %}
        {% if level >= levelStart and ( item.nrOfSiblings > 0 or not item.nameSameAsParent ) %}
            <a class="sg-linklist-link sg-linklist-child"
               href="{{ webPath }}{{ item.pathSum }}/{{ item.hash }}.html">
                {{ item.hash }}
            </a>
        {% endif %}
    {% endif %}

{% endmacro %}

{% macro linklistStart(tree, levelStart = 0, webPath = webPath) %}
    <div class="sg-link-list-wp sg-section transform-this">
        {% if 0 >= levelStart %}
            <h1><a class="sg-linklist-link sg-linklist-head" href="{{ webPath }}all.html"> All Elements</a></h1>
        {% endif %}
        {{ linklist(tree, level = 0, webPath = webPath) }}
    </div>


{% endmacro %}
